{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": "always",

    "camelcase": true,

    "eqeqeq": true,

    "eqnull": true,

    "indent": 2,

    "latedef": true,

    "newcap": true,

    "quotmark": "single",

    "trailing": true,

    "undef": true,

    "unused": true,

    "maxlen": 80
  }
}
